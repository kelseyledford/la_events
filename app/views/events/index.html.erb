<nav class="navbar navbar-default event_nav" role="navigation"> 
	<%= render partial: "shared/navbar" %>
</nav>

<%= render partial: "shared/flash" %>

<div class= "container">
	<h1 class="header">All Events</h1>
	<br>
	<table class="events_list table table-bordered table-responsive table-condensed table-hover">
		<thead>
		<tr>
			<th>Date</th>
			<th style="display: none">Timesort</th>
			<th>Time</th>
			<th>Name</th>
			<th class="hidden_col">Price</th>
			<th class="hidden_col">Neighborhood</th>
			<th>More Info</th>
		</tr>
		</thead>
		<tbody>
		<% @events.each do |event| %>
		<tr>
			<td><%= event.event_date.strftime("%m/%d/%y") %></td>
			<td style="display: none"><%= event.start_time %></td>
			<td><%= event.start_time.strftime("%l:%M%P") %></td>
			<td><strong><%= event.name %></strong></td>
			<td class="hidden_col"><%= event.price %></td>
			<td class="hidden_col"><% if event.neighborhood %><%= event.neighborhood.name %><% end %></td>
			<td><%= link_to 'Details', event %></td>
		</tr>
		<% end %>
		</tbody>
	</table>
</div>