<% if @con.errors.any? %>
	<h2><%= pluralize(@con.errors.count, "error") %>
	<ul class="list-group">
		<% @con.errors.messages.each do |message| %>
		<li class="list-group-item list-group-item-danger">
			<%= message[1][0] %>
		</li>
	<% end %>
	</ul> 
<% end %>

<%= bootstrap_form_for @con do |f| %>
<div class="row">
	<div class="col-md-6">
		<div class="form-group">
			<%= f.text_field :name, placeholder: 'Name', label: "Event Name *" %>
		</div>
		<div class="form-group">
			<%= f.date_field :event_date, label: 'Event Date' %>
		</div>
		<div class="form-inline form-group">
			<%= f.time_field :start_time %>
			<%= f.time_field :end_time %>
				</div>
  	<div class="form-group">
			<%= f.text_area :details, {size: "30x7"} %>
		</div>
	</div>
	<div class="col-md-6">
		<div class="form-group">
		<%= f.text_field :price, placeholder: 'Price', label: "Price *" %>
		</div>
  	<div class="form-group">
			<%= f.label "Neighborhood:" %>
			<%= collection_select :con, :neighborhood, Neighborhood.all, :id, :name %>
		</div>
  	<div class="form-group">
			<%= f.text_field :street, placeholder: 'Street Address', label: 'Address *' %>
		</div>
  	<div class="form-group">
			<%= f.text_field :city, placeholder: 'City', label: 'City *' %>
		</div>
  	<div class="form-group">	
			<%= f.text_field :state, :value => 'CA', label: 'State *' %>
		</div>
  	<div class="form-group">
			<%= f.text_field :zip, placeholder: 'Zip Code', label: 'Zip Code *' %>
		</div>
		<%= f.submit "Submit" %>
		<% end %>
		<span class="spaced glyphicon glyphicon-chevron-left"></span>
		<%= link_to "	Back to the Events Page", cons_path %>
	</div>
</div>