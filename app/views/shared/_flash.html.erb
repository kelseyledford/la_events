<!-- Flashes green notice for success (via Bootstrap)-->
<% if flash[:success] %>
  <% flash.each do |key, value| %>
    <div class="alert alert-success">
      <%= value %>
    </div>
  <% end %>
<% end %>

<!-- Flashes red notice for errors (via Bootstrap) -->
<% if flash[:error] %>
  <% flash.each do |key, value| %>
    <div class="alert alert-error">
      <%= value %>
    </div>
  <% end %>
<% end %>