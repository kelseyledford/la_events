<div class="container">
	<% if @artevent.errors.any? %>
		<h2><%= pluralize(@artevent.errors.count, "error") %>
		<ul class="list-group">
			<% @artevent.errors.messages.each do |message| %>
			<li class="list-group-item list-group-item-danger">
				<%= message[1][0] %>
			</li>
		<% end %>
		</ul> 
	<% end %>

<%= bootstrap_form_for @artevent do |f| %>

<%= f.text_field :name, placeholder: 'Name', label: "Event Name *" %>
<br>
<%= f.text_field :price, placeholder: 'Price', label: "Price *" %>
<br>
<%= f.date_select :event_date, :order => [:day, :month, :year], label: 'Event Date' %>
<br>
<%= f.time_select :start_time, {ampm: true, minute_step: 15} %>
<br>
<%= f.time_select :end_time, {ampm: true, minute_step: 15} %>
<br>
<%= f.label "Neighborhood" %>
<br>
<%= collection_select :art_event, :neighborhood, Neighborhood.all, :id, :name %>
<br>
<%= f.text_area :details, {size: "30x10"} %>
<br>
<br>
<%= f.text_field :street, placeholder: 'Street Address', label: 'Address *' %>
<br>
<%= f.text_field :city, placeholder: 'City', label: 'City *' %>
<%= f.text_field :state, :value => 'CA', label: 'State *' %>
<br>
<%= f.text_field :zip, placeholder: 'Zip Code', label: 'Zip Code *' %>
<br>
<%= f.submit %>

<% end %>

<%= link_to "Back to the art events page", art_events_path %>

</div>