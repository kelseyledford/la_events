<%= render partial: "shared/navbar" %>

<% flash.each do |key, value| %>
    <%= value %>
<% end %>

<div class= "container">
	<h1>Art Events</h1>
	<br>
	<table class="events_list table table-bordered table-responsive table-condensed table-hover">
		<thead>
		<tr>
			<th>Date</th>
			<th style="display: none">Timesort</th>
			<th>Time</th>
			<th>Name</th>
			<th>Price</th>
			<th>Neighborhood</th>
			<th>More Info</th>
		</tr>
		</thead>
		<tbody>
		<% @artevents.each do |artevent| %>
		<tr>
			<td><%= artevent.event_date.strftime("%m/%d/%y") %></td>
			<td style="display: none"><%= artevent.start_time %></td>
			<td><%= artevent.start_time.strftime("%l:%M%P") %></td>
			<td><strong><%= artevent.name %></strong></td>
			<td><%= artevent.price %></td>
			<td><% if artevent.neighborhood %><%= artevent.neighborhood.name %><% end %></td>
			<td><%= link_to 'Details', artevent %></td>
		</tr>
		<% end %>
		</tbody>
	</table>

	<%= link_to 'New Event', new_art_event_path %>
</div>