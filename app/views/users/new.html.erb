<div class="container">
	<div class="row">
		<!-- Two column Bootstrap layout -->
		<div class="col-md-6 sign_logo_set">
			<h1 class="sign_events_logo"><%= link_to 'L.A. Events', events_path %></h1>
			<h2>Sign Up</h2>
			<p class="sign_details">Already have an account? <%= link_to 'Sign in', new_sessions_path %></p>
		</div>
		<!-- Second column -->
		<div class="col-md-6 sign_up_form">
			<%= bootstrap_form_for @user do |f| %>
			  <%= f.text_field :name, placeholder: 'Username', label: "Username"  %>
			  <%= f.text_field :email, placeholder: 'Email' %>
			  <%= f.password_field :password, placeholder: 'Password', label: "Password (minimum 5 characters)" %>
			  <!-- Uses has_secure_password in the user model to confirm that the passwords match -->
			  <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', label: "Confirm Password" %>
			  <br>
				<%= f.submit %>
				<% end %>
		</div>
	</div>
</div>