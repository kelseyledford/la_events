<!DOCTYPE html>
<html>
<head>
  <title>Events</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
	<!-- DataTables CSS -->
	<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.0/css/jquery.dataTables.css">
	<!-- Bootstrap Datatables CSS -->
	<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/plug-ins/28e7751dbec/integration/bootstrap/3/dataTables.bootstrap.css">
	<!-- jQuery -->
	<script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.10.2.min.js"></script>
	<!-- DataTables -->
	<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.0/js/jquery.dataTables.js"></script>
	<!-- Bootstrap Datatables JS -->
	<script type="text/javascript" src="//cdn.datatables.net/plug-ins/28e7751dbec/integration/bootstrap/3/dataTables.bootstrap.js"></script>
	<!-- Google Maps -->
	<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
	<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
  <%= csrf_meta_tags %>
</head>
<body class="container">
	<% flash.each do |key, value| %>
		<%= value %>
	<% end %>
	<%= yield %>
	<br>
  <% if !current_user %>
    <p><%= link_to "Sign Up", new_user_path %></p>
    <p><%= link_to "Sign In", new_sessions_path %></p>
  <% else %>
    <p>Hello, <%= current_user.name %></p>
    <p><%= link_to "Sign Out", sessions_path, :method => :delete %></p>
  <% end %>
</body>
</html>