<%#Show some errors %>
<% if @festival.errors.any? %>
	<h2><%= pluralize(@festival.errors.count, "error") %>
	<ul class="list-group">
		<% @festival.errors.messages.each do |message| %>
		<li class="list-group-item list-group-item-danger">
			<%= message[1][0] %>
		</li>
	<% end %>
	</ul> 
<% end %>

<%= bootstrap_form_for(@festival, layout: :inline) do |f| %>

<%= f.text_field :name, placeholder: 'Name', label: "Festival Name *" %>
<br>
<%= f.text_field :type, placeholder: 'e.g. Food, Cultural', label: "Type *" %>
<br>
<%= f.date_select :fest_date, :order => [:day, :month, :year], label: 'Festival Date' %>
<br>
<%= f.time_select :start_time, {ampm: true, minute_step: 15} %>
<br>
<%= f.time_select :end_time, {ampm: true, minute_step: 15} %>
<br>
<%= f.label "Neighborhood" %>
<br>
<%= collection_select :festival, :neighborhood, Neighborhood.all, :id, :name %>
<br>
<%= f.text_area :details, {size: "30x10"} %>
<br>
<br>
<%= f.text_field :street, placeholder: 'Street Address', label: 'Address *' %>
<br>
<%= f.text_field :city, placeholder: 'City', label: 'City *' %>
<%= f.text_field :state, :value => 'CA', label: 'State *' %>
<br>
<%= f.text_field :zip, placeholder: 'Zip Code', label: 'Zip Code *' %>
<br>
<%= f.submit %>

<% end %>

<%= link_to "Back to the festivals page", festivals_path %>