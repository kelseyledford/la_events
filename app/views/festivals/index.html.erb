<nav class="navbar navbar-default" role="navigation">
	  <%= render partial: "shared/navbar" %>
</nav>

<% flash.each do |key, value| %>
    <%= value %>
<% end %>

<div class= "container">
	<h1>Los Angeles Festivals</h1>
	<br>
	<table class="events_list table table-bordered table-responsive table-condensed table-hover">
		<thead>
		<tr>
			<th>Date</th>
			<th style="display: none">Timesort</th>
			<th>Time</th>
			<th>Name</th>
			<th>Neighborhood</th>
			<th>More Info</th>
		</tr>
		</thead>
		<tbody>
		<% @festivals.each do |festival| %>
		<tr>
			<td><%= festival.fest_date.strftime("%m/%d/%y") %></td>
			<td style="display: none"><%= festival.start_time %></td>
			<td><%= festival.start_time.strftime("%l:%M%P") %></td>
			<td><strong><%= festival.name %></strong></td>
			<td><% if festival.neighborhood %><%= festival.neighborhood.name %><% end %></td>
			<td><%= link_to 'Details', festival %></td>
		</tr>
		<% end %>
		</tbody>
	</table>

	<%= link_to 'New festival', new_festival_path %>
</div>